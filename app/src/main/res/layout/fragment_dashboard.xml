<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".fragment.owner.DashboardFragment">

    <Button
            android:text="Add Menu Item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addFoodButton"
            android:layout_gravity="right" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <GridView
            android:id="@+id/GV"
            android:numColumns="2"
            android:layout_width="match_parent"
            android:layout_height="542dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/addFoodButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>